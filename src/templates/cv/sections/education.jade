section.education#education
    div.timeline-section-title
        div.timeline-section-title--icon
        div.timeline-section-title--label
            h1.section-title #{cv.education.title}
    ul.education-list
        each educationItem in cv.education.items
            li.education-list-item.flex-container
                div.timeline-block-book
                div.education-list-item--block.default-padding-right
                    h3.education-list-item--speciality #{educationItem.speciality}
                    h4.education-list-item--where
                        i.fa.fa-university
                        span.education-list-item--where--university #{" " + educationItem.where}
                        em.education-list-item--where--graduation #{" - Graduation date: " + educationItem.graduation}
                    p.education-list-item--description #{educationItem.description}

