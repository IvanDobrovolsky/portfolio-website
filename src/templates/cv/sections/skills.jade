section.skiils#skills
    div.timeline-section-title
        div.timeline-section-title--icon
        div.timeline-section-title--label
            h1.section-title #{cv.skills.title}
    ul
        each skillCategory in cv.skills.items
            li.skills-category.flex-container
                div.timeline-block-point
                div
                    h3.skills-category-title #{skillCategory.type}
                    ul.skills-list
                        each skillItem in skillCategory.items
                            li.skills-list-item
                                i.skills-list-item--icon(class="#{skillItem.icon}")
                                span.skills-list-item--name #{skillItem.name}